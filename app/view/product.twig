{% extends "./template/html.twig" %}

{% block metas_data %}{% endblock %}

{% block title %}Shoes | Produtos
{% endblock %}

{% block styles %}
   <link rel="stylesheet" href="{{file}}css/product.css">
{% endblock %}
{% block body %}
	<main>

		<div class="search">
				<input type="search" class="input-search" placeholder="Pesquisar">
				<i class="fas fa-search lupa"></i>
		</div>

		<section class="grid-main" id="l_cards">
			<div class="filters">
            <label for="filter">Filtrar por:</label>
				<select name="filter" id="filter" >
               <option value="0">Selecione</option>
               <option value="1">Categoria</option>
               <option value="2">Marca</option>
               <option value="3">Gênero</option>
            </select>
            <label for="order">Ordernar em:</label>
				<select name="order" id="order">
               <option value="0">Selecione</option>
               <option value="1">Crescente</option>
               <option value="2">Descrescente</option>
               <option value="3">Maior preço</option>
               <option value="4">Menor preço</option>

            </select>
            <button>Filtrar</button>
			</div>
			<div class="products">

				{% for product in products %}
					<div class="card">
				
						<div class="card_header">
							<img src="{{ file }}{{product.dirImageShoe}}" width="200" height="200" alt="{{product.nameShoe}}">
						</div>
						<div class="card_body">
							<h2>{{product.nameShoe}}</h2>
							<!-- <p>Descricao bonita bem cheia Lorem ipsum dolor sit amet consectetur adipisicing elit. Veritatis odio exercitationem velit perferendis. Placeat possimus illo eius sequi laboriosam nobis vel in quis! Fugit, corrupti temporibus aliquid dolorum quam doloremque.</p> -->
							<p>{{product.genderShoe}}</p>
							<p class="price">R$ {{ product.priceShoe }}</p>
							{# <a href="{{file}}../app/controller/pdfController.php" class="details" target="_blank">pdf</a> #}
							<button  class="details">Detalhes</button>
						</div>

					</div>


				{% endfor %}


			</div>

		</section>
	</main>


{% endblock %}

{% block scripts %}{% endblock %}
